{
    "name": "tomphp/config-service-provider",
    "description": "A service provider for the League of Extraordinary Packages' Container which easily allows you to add config values to your DI.",
    "license": "MIT",
    "type": "library",
    "homepage": "https://github.com/tomphp/config-service-provider",
    "keywords": ["di", "dependency injection", "container", "league"],
    "authors": [
        {
            "name": "Tom Oram",
            "email": "tom@x2k.co.uk",
            "homepage": "https://github.com/tomphp",
            "role": "Developer"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^4.6.4",
        "squizlabs/php_codesniffer": "*"
    },
    "require": {
        "league/container": "^2.0.2"
    },
    "autoload": {
        "psr-4": {
            "TomPHP\\ConfigServiceProvider\\": "src/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpcs --standard=psr2 src tests && vendor/bin/phpunit --colors=always"
    }
}
